<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/toolbar_blue"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="20dp"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Chữ bên trái -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USTH Weather"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <!-- 2 icon bên phải -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/action_refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_refresh_24"
                    android:contentDescription="@string/refresh"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/action_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_settings_24"
                    android:contentDescription="@string/settings"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- WeatherFragment (green area) -->
    <fragment
        android:id="@+id/weather_fragment"
        android:name="vn.edu.usth.usthweather.WeatherFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <!-- ForecastFragment (white area, RecyclerView) -->
    <fragment
        android:id="@+id/forecast_fragment"
        android:name="vn.edu.usth.usthweather.ForecastFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
